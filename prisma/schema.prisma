generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String
  surname           String
  image             String
  nike_name         String   @unique
  password          String
  wishlist_products String
  wishlist_shops    String
  email             String   @unique
  status            String
  qualification     String
  updateAt          DateTime @updatedAt
  createAt          DateTime @default(now())
}

model Telephone {
  telephone_id String   @id @default(uuid())
  number       Int
  dd_code      Int
  updateAt     DateTime @updatedAt
  createAt     DateTime @default(now())
}

model Orders {
  orders_id      String   @id @default(uuid())
  status_order   String
  payment_method String
  status         String
  updateAt       DateTime @updatedAt
  createAt       DateTime @default(now())
}

model Products {
  products_id           String   @id @default(uuid())
  product_name          String
  price                 Int
  description           String
  specifications        String
  details               String
  product_route         String
  product_tags          String
  video                 String
  main_image            String
  gallery               String
  image_3d              String
  status                String
  qualification         String
  counter_views_product String
  platform              String
  collection            String
  the_amount            Int
  discount              Int
  turbo_level           Int
  updateAt              DateTime @updatedAt
  createAt              DateTime @default(now())
}

model Subcategories {
  Subcategories_id          String   @id @default(uuid())
  category_id               Int
  subcategory_name          String
  subcategory_banner        String
  subcategory_image         String
  subcategory_icon          String
  subcategory_route         String
  subcategory_status        String
  counter_views_subcategory Int
  description               String
  updateAt                  DateTime @updatedAt
  createAt                  DateTime @default(now())
}

model Posts {
  posts_id        String   @id @default(uuid())
  product_id      Int
  user_id         Int
  seller_id       Int
  subject_message String
  body_message    String
  seller_response String
  updateAt        DateTime @updatedAt
  createAt        DateTime @default(now())
}
