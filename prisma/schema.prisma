generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id           String   @id @default(uuid()) // Gera o id automaticamente pelo prisma
  name              String
  surname           String
  image             String
  nike_name         String   @unique
  password          String
  wishlist_products String
  wishlist_shops    String
  email             String   @unique
  status            String
  qualification     String
  updateAt          DateTime @updatedAt
  createAt          DateTime @default(now())
}

model Telephone {
  telephone_id String   @id @default(uuid()) // Gera o id automaticamente pelo prisma
  number       Int
  dd_code      Int
  updateAt     DateTime @updatedAt
  createAt     DateTime @default(now())
}

model Orders {
  orders_id      String   @id @default(uuid()) // Gera o id automaticamente pelo prisma
  status_order   String
  payment_method String
  status         String
  updateAt       DateTime @updatedAt
  createAt       DateTime @default(now())
}
